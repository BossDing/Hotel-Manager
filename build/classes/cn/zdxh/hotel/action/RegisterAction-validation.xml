<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="user.cu_username">
        <field-validator type="requiredstring" short-circuit="true">
            <param name="trim">true</param>
            <message>用户名不能为空！</message>
        </field-validator>
    </field>
    <field name="user.cu_password">
        <field-validator type="requiredstring" short-circuit="true">
            <param name="trim">true</param>
            <message>密码不能为空！</message>
        </field-validator>

    </field>
    <!-- 	<field name="user.cu_password"> -->
    <!-- 		<field-validator type="fieldexpression"> -->
    <!-- 			<param name="expression"><![CDATA[re_password!=user.user.cu_password]]></param> -->
    <!-- 			<message>密码不一致！</message> -->
    <!-- 		</field-validator> -->
    <!-- 	</field> -->
    <field name="user.cu_phoneNumber">
        <field-validator type="requiredstring" short-circuit="true">
            <param name="trim">true</param>
            <message>请输入您的电话号码！</message>
        </field-validator>
    </field>
    <field name="user.cu_email">
        <field-validator type="requiredstring" short-circuit="true">
            <param name="trim">true</param>
            <message>邮箱信息不能为空！</message>
        </field-validator>
    </field>
</validators>