<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.zdxh.hotel.modle.Employee" table="employee">
        <id name="id" column="id" length="40">

        </id>
        <property name="name" length="40"></property>
        <property name="age" length="10"></property>
        <property name="sex" length="20"></property>
        <property name="position" length="40"></property>

    </class>
</hibernate-mapping>